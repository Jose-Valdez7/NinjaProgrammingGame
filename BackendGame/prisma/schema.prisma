generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  isRevoked Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation("UserRefreshToken", fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}

model User {
  id                  String               @id @default(uuid())
  firstName           String
  lastName            String
  email               String               @unique
  phone               String?
  cedula              String               @unique
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  role                UserRole             @default(USER)
  score               Int                  @default(0)
  levels              LevelProgress[]      @relation("UserLevelProgress")
  passwordResetTokens PasswordResetToken[]
  rankings            Ranking[]            @relation("UserRanking")
  refreshTokens       RefreshToken[]       @relation("UserRefreshToken")

  @@map("users")
}

model LevelProgress {
  id           Int      @id @default(autoincrement())
  userId       String
  level        Int
  commandsUsed Int
  timeTaken    Int
  energized    Boolean
  success      Boolean
  createdAt    DateTime @default(now())
  user         User     @relation("UserLevelProgress", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, level])
  @@map("level_progress")
}

model Ranking {
  id           Int      @id @default(autoincrement())
  level        Int
  userId       String
  commandsUsed Int
  timeTaken    Int
  createdAt    DateTime @default(now())
  user         User     @relation("UserRanking", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([level, userId])
  @@index([level])
  @@map("rankings")
}

model GameSession {
  id        String    @id @default(cuid())
  userId    Int?
  level     Int
  startTime DateTime  @default(now())
  endTime   DateTime?
  completed Boolean   @default(false)
  commands  Json?

  @@map("game_sessions")
}

enum UserRole {
  ADMIN
  USER
}
